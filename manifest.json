{
  "manifest_version": 3,
  "name": "Cisco Helper",
  "version": "1.0",
  "description": "Consulta autom√°tica al servidor Django.",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.netacad.com/*",
    "https://content.netacad.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://content.netacad.com/*",
        "https://*.netacad.com/*",
        "https://www.netacad.com/*",
        "<all_urls>"
      ],
      "js": [
        "script.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}