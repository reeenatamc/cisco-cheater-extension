{
  "manifest_version": 3,
  "name": "Cisco Helper",
  "version": "1.0",
  "description": "Consulta automática al servidor Django.",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://www.netacad.com/*",
    "https://content.netacad.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture_screen": {
      "suggested_key": {
        "default": "Alt+Period",
        "mac": "Alt+Period"
      },
      "description": "Capturar área de pantalla"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://content.netacad.com/*",
        "https://*.netacad.com/*",
        "https://www.netacad.com/*"
      ],
      "js": [
        "script.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 